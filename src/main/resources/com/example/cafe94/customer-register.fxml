<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<ScrollPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cafe94.CustomerAuthController">


        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
            <fx:include source="page.fxml" />
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label prefHeight="30.0" alignment="CENTER" prefWidth="85.0" text="Welcome" />
                <VBox alignment="CENTER" fillWidth="false" prefHeight="126.0" prefWidth="515.0">
                    <VBox alignment="CENTER" fillWidth="false" prefHeight="87.0" prefWidth="300">
                        <VBox fillWidth="false" prefHeight="87.0" prefWidth="300">
                            <children>
                                <Label prefHeight="30.0" prefWidth="85.0" text="First name" />
                                <TextField fx:id="firstName" prefHeight="26.0" prefWidth="384.0" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                        <VBox fillWidth="false" prefHeight="87.0" prefWidth="300">
                            <children>
                                <Label prefHeight="30.0" prefWidth="85.0" text="Last name" />
                                <TextField fx:id="lastName" prefHeight="26.0" prefWidth="384.0" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                        <VBox fillWidth="false" prefHeight="87.0" prefWidth="300">
                            <children>
                                <Label prefHeight="30.0" prefWidth="85.0" text="Email" />
                                <TextField fx:id="email" prefHeight="26.0" prefWidth="384.0" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>


                        <VBox fillWidth="false" prefHeight="87.0" prefWidth="300">
                            <children>
                                <Label prefHeight="30.0" prefWidth="85.0" text="Password" />
                                <PasswordField fx:id="password" prefHeight="26.0" prefWidth="384.0" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </VBox>
               <Button onAction="#register" text="Register" />
                </VBox>

            </children>
        </VBox>

</ScrollPane>
